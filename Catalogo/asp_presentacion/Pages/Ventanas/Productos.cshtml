@page
@model asp_presentacion.Pages.Ventanas.ProductosModel
@{
    ViewData["Titulo"] = "Productos";
}

<center>
    <div>
        <form method="POST" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div align="left">
                <h3>Productos</h3>
            </div>

            <div align="left" class="bt_panel_buttons">
                <input type="submit" value="Refrescar" asp-page-handler="BtRefrescar" class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_utilidades.Enumerables.Ventanas.Listas)" />
                <input type="submit" value="Nuevo" asp-page-handler="BtNuevo" class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_utilidades.Enumerables.Ventanas.Listas)" />
                <input type="submit" value="Guardar" asp-page-handler="BtGuardar" class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_utilidades.Enumerables.Ventanas.Listas)" />
                <input type="submit" value="Cancelar" asp-page-handler="BtCancelar" class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_utilidades.Enumerables.Ventanas.Listas)" />
            </div>

            @if (Model.Accion != lib_utilidades.Enumerables.Ventanas.Listas || Model.Accion == lib_utilidades.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden" asp-for="@Model.Actual!.Id" />
            }

            @if (Model.Accion == lib_utilidades.Enumerables.Ventanas.Editar)
            {
                <div class="containers_vn panel panel-default">
                    <h3>Producto</h3>

                    <div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">Código</label>
                            <div class="col-lg-6">
                                <input id="nmCodigo" class="cts_forms form-control" asp-for="@Model.Actual!.Codigo" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">Nombre</label>
                            <div class="col-lg-6">
                                <input id="nmNombre" class="cts_forms form-control" asp-for="@Model.Actual!.Nombre" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">Cantidad</label>
                            <div class="col-lg-6">
                                <input id="nmCantidad" class="cts_forms form-control" asp-for="@Model.Actual!.Cantidad" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">Precio</label>
                            <div class="col-lg-6">
                                <input id="nmPrecio" class="cts_forms form-control" asp-for="@Model.Actual!.Precio" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">Costo</label>
                            <div class="col-lg-6">
                                <input id="nmCosto" class="cts_forms form-control" asp-for="@Model.Actual!.Costo" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">Fabricante</label>
                            <div class="col-lg-6">
                                <select id="nmFabricante" class="form-control" asp-for="@Model.Actual!.Fabricante"
                                        asp-items="@(new SelectList(Model.Fabricantes, "Id", "Nombre"))">
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">Categoría</label>
                            <div class="col-lg-6">
                                <select id="nmCategoria" class="form-control" asp-for="@Model.Actual!.Categoria"
                                        asp-items="@(new SelectList(Model.Categorias, "Id", "Categoria"))">
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (Model.Accion == lib_utilidades.Enumerables.Ventanas.Listas || Model.Accion == lib_utilidades.Enumerables.Ventanas.Borrar)
            {
                <input id="flNombre" class="cts_forms form-control" asp-for="@Model.Filtro!.Nombre" placeholder="Nombre" />
                <br />

                <div class="containers_vn panel panel-default">
                    <table class="tb_data table table-striped table-bordered table-hover">
                        <tr>
                            <th>Nombre</th>
                            <th>Fabricante</th>
                            <th>Categoria</th>
                            <th>Precio</th>
                            <th>Cantidad</th>
                            <th>Acción</th>
                        </tr>
                        @if (Model.Lista != null)
                        {
                            @foreach (var producto in Model.Lista)
                            {
                                <tr>
                                    <td>@producto.Nombre</td>
                                    <td>@producto.FabricanteNavigation.Nombre</td>
                                    <td>@producto.CategoriaNavigation.Categoria</td>
                                    <td>@producto.Precio</td>
                                    <td>@producto.Cantidad</td>
                                    <td>
                                        <input type="submit" value="Modificar" asp-page-handler="BtModificar" class="btn btn-secondary" asp-route-data="@producto.Id" />
                                        <input type="submit" value="Borrar" asp-page-handler="BtBorrarVal" class="btn btn-secondary" asp-route-data="@producto.Id" />
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            }
        </form>
    </div>
</center>
